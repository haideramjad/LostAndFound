<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haider.networking.Main2Activity">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="38dp"
        android:text="Title" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="36dp"
        android:text="Product" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv2"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="33dp"
        android:text="Message" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv3"
        android:layout_below="@+id/tv3"
        android:layout_marginTop="41dp"
        android:text="User_Id" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv4"
        android:layout_centerVertical="true"
        android:text="Day" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv5"
        android:layout_below="@+id/tv5"
        android:layout_marginTop="35dp"
        android:text="Date" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv6"
        android:layout_below="@+id/tv6"
        android:layout_marginTop="34dp"
        android:text="Place" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv7"
        android:layout_below="@+id/tv7"
        android:layout_marginTop="32dp"
        android:text="Time" />

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv2"
        android:hint="Tilte"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/tv1"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title"
        android:hint="Product"
        android:layout_below="@+id/title"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:layout_above="@+id/tv4"
        android:layout_alignStart="@+id/product"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="User_Id"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignStart="@+id/message"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv6"
        android:hint="Day"
        android:layout_alignStart="@+id/user_id"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv7"
        android:hint="Date"
        android:layout_alignEnd="@+id/day"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv8"
        android:hint="Place"
        android:layout_alignStart="@+id/date"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv8"
        android:hint="time"
        android:layout_alignEnd="@+id/place"
        android:ems="10"
        android:inputType="textPersonName" />

    <!--<TextView
        android:id="@+id/tv9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Image"
        android:layout_below="@+id/tv8"
        android:layout_alignStart="@+id/tv8" />

    <EditText
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Image"
        android:layout_alignBottom="@+id/tv9"
        android:layout_toEndOf="@+id/tv4"
        android:ems="10"
        android:inputType="textPersonName" />-->

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginStart="33dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/tv4"
        android:text="Add" />
</RelativeLayout>
